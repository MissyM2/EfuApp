@inject NavigationManager NavManager

@if (Weeks != null && Weeks.Count > 0)
{
    foreach (var c in Weeks)
    {
        <tr>
            <td class="col page-subtitle">@c.WeekName</td>
            <td class="col page-subtitle">@c.WeekDesc</td>
            <td class="col page-subtitle">@c.Term.TermName</td>
            <td class="col page-subtitle">@c.LikedLeast</td>
            <td class="col page-subtitle">@c.LikedMost</td>
            <td class="col page-subtitle">@c.MostDifficult</td>
            <td class="col page-subtitle">@c.LeastDifficult</td>
            <td class="col page-subtitle">
                <button type="button"
                        class="btn btn-light page-subtitle"
                        @onclick="@(() => EditWeek(c.WeekId))">Edit</button>
            </td>
        </tr>
    }
   

}


@code {
    [Parameter]
    public List<Week> Weeks { get; set; } = new List<Week>();

    private void EditWeek(int weekId)
    {
        NavManager.NavigateTo($"/editweek/{weekId}");
    }

}