<div class="input group page-subtitle">
    <input type="text"
           class="form-control page-subtitle"
            placeholder="Type deliverable name here to search"
            @bind-value="deliverableNameToSearch" />
    <br />
    <button type="button"
            class="btn-success input-group-text page-subtitle"
            @onclick="OnSearch">Search</button>
</div>

@code {
    private string deliverableNameToSearch = string.Empty;

    [Parameter]
    public EventCallback<string> OnSearchDeliverableList { get; set; }

    public void OnSearch()
    {
        OnSearchDeliverableList.InvokeAsync(deliverableNameToSearch);
    }

}