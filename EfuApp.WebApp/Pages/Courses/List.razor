@page "/courses/list"

@inject NavigationManager NavManager


<div class="page-title">Course List</div>
<br />

<SearchCourseListComponent OnSearchCourseList="OnCourseListSearch"></SearchCourseListComponent>
<br />
<CourseListComponent SearchTerm="@searchTerm"></CourseListComponent>
<br />

<button type="button"
        class="btn btn-primary page-subtitle"
        @onclick="AddCourse">Add Course</button>

@code {
    private string searchTerm = string.Empty;

    private void OnCourseListSearch(string searchTerm)
    {
        this.searchTerm = searchTerm;
    }

    private void AddCourse()
    {
        NavManager.NavigateTo("/courses/create");
    }

}
