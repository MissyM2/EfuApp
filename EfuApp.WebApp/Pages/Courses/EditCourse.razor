@page "/editcourse/{CrsId:int}"

@inject NavigationManager NavManager
@inject IViewCourseByIdUseCase ViewCourseByIdUseCase
@inject IEditCourseUseCase EditCourseUseCase

@attribute [Authorize(Policy = "Course")]

<h3>EditCourse</h3>

<EditForm Model="course" OnValidSubmit="SaveCourse">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>

    <div class="form-group">
        <label for="name">Course Name</label>
        <InputText id="name"
        @bind-Value="course.CourseName"
                   class="form-control">
        </InputText>
    </div>

    <div class="form-group">
        <label for="name">Course Description</label>
        <InputText id="name"
        @bind-Value="course.CourseDesc"
                   class="form-control">
        </InputText>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-primary" @onclick="Cancel">Cancel</button>
</EditForm>




@code {
    [Parameter]
    public int CrsId { get; set; }

    private Course course = new Course();

    protected override async Task OnParametersSetAsync()
    {
        this.course = await ViewCourseByIdUseCase.ExecuteAsync(this.CrsId);
    }

    private async Task SaveCourse()
    {
        await EditCourseUseCase.ExecuteAsync(this.course);
        NavManager.NavigateTo("/courses");
    }

    private void Cancel()
    {
        NavManager.NavigateTo("/courses");
    }

}